.navbar-header .trigger
  background-color: none
  height: auto
  width: auto
  margin: 18px 0 0 16px
  background: none
  > span
    display: block
    background-color: #000
    width: 30px
    height: 4px
    border-radius: 3px
    opacity: 0.7
    margin-bottom: 4px


.sidebar-nav > .sidebar-brand a, .sidebar-nav > .sidebar-brand a:hover
  background-image: url('/images/ic-title-bg.png');


a
  color: darken(#fabc01, 5%)
  &:hover
    color: rgba(#fabc01, 1)

footer
  color: rgba(#fff, 0.5)
  padding: 3em 1em
  font-size: 14px
  line-height: 1.75em
  font-family: Open-Sans-Light, sans-serif
  a
    color: rgba(#fabc01, 0.8)
    &:hover
      color: rgba(#fabc01, 1)

.link-no-style
  color: rgba(#fff, 0.5)


.navbar-right
  border-left: 0
  padding-right: 1em
  li
    margin-top: 2px
    &:hover
      background: none
  a
    color: rgba(#000, 0.75)

.tagline:hover
  cursor: pointer

.btn-cta
  background-color: #F37356
  color: #fff
  padding: 1em 2em
  border-radius: 100px
  margin-bottom: 2em
  font-size: 1.25em

.contract-search-form .form-control, .btn-search, .btn-search:hover, .btn-search:focus
  height: 46px
  font-size: 18px

.contract-search-form .form-control
  background: rgba(255,255,255,0.2);

.row-content > div[class*=col-lg] > div
  padding-top: 100px

.resources-mining:hover
  cursor: pointer

.resources, select[name="resource"]

  text-transform: capitalize


.search-input-wrapper .col-lg-2
  margin-bottom: 0

.search-page-input-wrapper
  padding-top: 2em !important

.search-list-wrapper td ul
  margin-top: 0

.search-no-result, .search-loading
  font-size: 2em
  margin-top: 40px
  margin-left: 50px

.table-contract td, .table-contract td a, .table-contract ul li
  font-size: 16px !important

.table-contract td a
  font-family: open-sans-bold

.table-contract tr th:first-child
  padding-left: 48px

.search-result-wrapper
  overflow-y: scroll

